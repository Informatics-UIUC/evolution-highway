<UserControl x:Class="EvolutionHighwayApp.Views.HighlightRegionCollectionViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:EvolutionHighwayApp.Views" 
    mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400">

    <ItemsControl ItemsSource="{Binding RefChromosome.HighlightRegions}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                </Grid>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <views:HighlightRegionViewer HighlightRegion="{Binding Content,RelativeSource={RelativeSource TemplatedParent}}"
                                             VerticalAlignment="Top"/>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
