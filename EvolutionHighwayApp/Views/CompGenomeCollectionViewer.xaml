<!--                <local:LinearGradientBrushInterpolator TargetName="TreeMapBorder" TargetProperty="Background"-->
<!--                                                       TemplateBrush="{StaticResource TreeMapBrush}"-->
<!--                                                       DataRangeBinding="{Binding Score}"/>-->
<!--            </toolkit:TreeMap.Interpolators>-->
