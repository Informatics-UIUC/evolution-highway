<!--~1~                            <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center" @1@-->
<!--~1~                                            Content="{Binding Score,Converter={StaticResource NumberToPrettyTextConverter},ConverterParameter=2}"/>@1@-->
<!--                        </Border>-->
<!--                    </DataTemplate>-->
<!--                </toolkit:TreeMapItemDefinition>-->
<!--            </toolkit:TreeMap.ItemDefinition>-->
<!--        </toolkit:TreeMap>-->

        <views:Sparkline Canvas.ZIndex="10" Grid.Row="1" Grid.Column="2" Margin="5,0,0,0" 
                         ItemsSource="{Binding RefChromosome.FeatureDensityData[AdjacencyScore]}"
                         Length="{Binding DataContext.RefChromosome.Length,ElementName=_compGenomeCollectionViewer,Converter={StaticResource ScaleConverter}}"
                         Visibility="{Binding DataContext.AppSettings.ShowAdjacencyScore,ElementName=_compGenomeCollectionViewer,Converter={StaticResource BoolToVisibilityConverter}}">
        </views:Sparkline>
        
    </Grid>
</UserControl>
