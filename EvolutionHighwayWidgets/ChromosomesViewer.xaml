<UserControl x:Class="EvolutionHighwayWidgets.ChromosomesViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:eh="clr-namespace:EvolutionHighwayWidgets" 
    xmlns:converters="clr-namespace:EvolutionHighwayWidgets.Converters" 
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400"
    x:Name="chromosomesViewerControl">
    
    <UserControl.Resources>
        <converters:DebuggingConverter x:Key="debuggingConverter"/>
        
        <DataTemplate x:Key="chromosomeTemplate">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="{Binding ElementName=chromosomesViewerControl,Path=GenomeName}"/>
                    <TextBlock Text="{Binding Path=Name}"/>
                </StackPanel>

                <eh:ComparativeSpeciesViewer Grid.Row="1" DataContext="{Binding Path=ComparativeSpecies,Mode=OneWay}"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    
    <ItemsControl x:Name="chromosomeViewer" ItemsSource="{Binding}" ItemTemplate="{StaticResource chromosomeTemplate}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl> 
</UserControl>
