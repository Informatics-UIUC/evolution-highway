<UserControl x:Class="EvolutionHighwayWidgets.SyntenyBlock"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Border BorderBrush="{x:Null}" Background="LightGray">
        <Viewbox Stretch="Uniform" MaxHeight="15">
            <TextBlock Text="{Binding Path=Label,Mode=OneWay}" FontFamily="Trebuchet MS"
                       TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Viewbox>
    </Border>
</UserControl>
