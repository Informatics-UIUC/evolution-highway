<UserControl x:Class="EvolutionHighwayWidgets.GenomeViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:eh="clr-namespace:EvolutionHighwayWidgets"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <UserControl.Resources>
        <DataTemplate x:Key="genomeTemplate">
            <Border BorderBrush="Black" BorderThickness="1">
                <eh:ChromosomeViewer DataContext="{Binding Path=Chromosomes}"/>
            </Border>
        </DataTemplate>
    </UserControl.Resources>
    
    <ItemsControl x:Name="genomeViewer" ItemsSource="{Binding}" ItemTemplate="{StaticResource genomeTemplate}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>
</UserControl>
